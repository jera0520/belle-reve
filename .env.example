# ===========================================
# Database
# ===========================================
DATABASE_URL="postgresql://user:password@localhost:5432/kbeauty_cocreation?schema=public"

# ===========================================
# NextAuth.js
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Japan LINE Login (일본 시장)
LINE_CLIENT_ID="your-line-client-id"
LINE_CLIENT_SECRET="your-line-client-secret"

# ===========================================
# Payment
# ===========================================
# Stripe (국제 결제)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Toss Payments (국내 결제)
TOSS_CLIENT_KEY="test_ck_..."
TOSS_SECRET_KEY="test_sk_..."

# ===========================================
# Storage (Cloudflare R2)
# ===========================================
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key"
R2_SECRET_ACCESS_KEY="your-secret-key"
R2_BUCKET_NAME="kbeauty-assets"
R2_PUBLIC_URL="https://cdn.yourdomain.com"

# ===========================================
# Crowdfunding API
# ===========================================
# CAMPFIRE (일본)
CAMPFIRE_API_KEY="your-campfire-api-key"
CAMPFIRE_API_SECRET="your-campfire-secret"

# Makuake (일본)
MAKUAKE_API_KEY="your-makuake-api-key"

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@yourdomain.com"

# ===========================================
# Analytics
# ===========================================
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_CROWDFUNDING="true"
NEXT_PUBLIC_ENABLE_AB_TESTING="true"
NEXT_PUBLIC_ENABLE_FGD="true"

# ===========================================
# Locale
# ===========================================
NEXT_PUBLIC_DEFAULT_LOCALE="ko"
NEXT_PUBLIC_SUPPORTED_LOCALES="ko,ja,en-US,fr"
